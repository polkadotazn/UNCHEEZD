<p id="notice"><%= notice %></p>

<h1>Cheese Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Cheese</th>
      <th>User</th>
      <th>Rating</th>
      <th>Review</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cheese_reviews.each do |cheese_review| %>
      <tr>
        <td><%= cheese_review.cheese_id %></td>
        <td><%= cheese_review.user_id %></td>
        <td><%= cheese_review.rating %></td>
        <td><%= cheese_review.review %></td>
        <td><%= link_to 'Show', cheese_review %></td>
        <td><%= link_to 'Edit', edit_cheese_review_path(cheese_review) %></td>
        <td><%= link_to 'Destroy', cheese_review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cheese Review', new_cheese_review_path %>
